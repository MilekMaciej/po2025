<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="samGUI.CarAddController"
      spacing="10" alignment="CENTER"
      prefWidth="400" prefHeight="250">

    <padding>
        <Insets topRightBottomLeft="10.0"/>
    </padding>

    <Label text="Wybierz części samochodu" style="-fx-font-size: 14; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="80"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <children>
            <Label text="Skrzynia:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="gearboxBox"
                      prefWidth="220"
                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Silnik:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="engineBox"
                      prefWidth="220"
                      GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Sprzęgło:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="clutchBox"
                      prefWidth="220"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </children>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Anuluj" onAction="#onCancel"/>
        <Button text="Zapisz"/>
    </HBox>

</VBox>
